@using Orco.Web.Helpers
@model IEnumerable<Orco.Web.Models.DTOs.ProductDTO>

<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Listado de productos</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="ProductCreate" class="btn btn-outline-primary">
                <i class="fas fa-plus"></i> Agregar nuevo producto
            </a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Categoría</th>
                <th>Precio</th>
                <th style="text-align: center;">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @(EnumHelper.GetDescription((item.ProductCategory)))
                    </td>
                    <td>
                        @((item.Price).ToString("c"))
                    </td>
                    <td style="text-align: center;">
                        <a asp-action="ProductEdit" class="btn btn-success" asp-route-productId="@item.ProductId">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a asp-action="ProductDelete" class="btn btn-danger" asp-route-productId="@item.ProductId">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
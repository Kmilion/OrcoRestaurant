@model Orco.Services.Identity.MainModule.Account.RegisterViewModel

<div class="login-page">
    <div class="lead">
        <h1>Registrar usuario</h1>
        <p>Elije cómo registrar</p>
    </div>

    <partial name="_ValidationSummary" />

    <div class="row">

        <div class="col-sm-6">
            <div class="card">
                <div class="card-header">
                    <h2>Registro de cuenta local</h2>
                </div>

                <div class="card-body">
                    <form asp-route="Login">
                        <input type="hidden" asp-for="ReturnUrl" />

                        <div class="form-group">
                            <label asp-for="Username"></label>
                            <input class="form-control" placeholder="Usuario" asp-for="Username" autofocus>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email"></label>
                            <input class="form-control" placeholder="Email" asp-for="Email" autofocus>
                        </div>
                        <div class="form-group">
                            <label asp-for="FirstName"></label>
                            <input class="form-control" placeholder="Nombre" asp-for="FirstName" autofocus>
                        </div>
                        <div class="form-group">
                            <label asp-for="LastName"></label>
                            <input class="form-control" placeholder="Apellido" asp-for="LastName" autofocus>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input type="password" class="form-control" placeholder="Contraseña" asp-for="Password" autocomplete="off">
                        </div>
                        <div class="form-group">
                            <label asp-for="RoleName"></label>
                            <select asp-for="RoleName" class="form-control" asp-items="@(new SelectList(ViewBag.message))"></select>
                        </div>
                        <button class="btn btn-primary" name="button" value="Register">Registrar</button>
                        <button class="btn btn-secondary" name="button" value="cancel">Cancelar</button>
                    </form>
                </div>
                <div class="card-footer">
                    <a href="@Url.Action("Login",new {Model.ReturnUrl })">Login</a>
                </div>
            </div>
        </div>


    </div>
</div>